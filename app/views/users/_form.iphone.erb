
<% form_for(@user,    :html => {:id => "singup", :title => "Profile",
                      :class => "panel", :selected => "true", :redirect => "true" }) do |f| %>
  <%- if @user.errors -%>
    <%= javascript_tag "alert(\"#{@user.errors.full_messages.join('\n')}\")" %>
  <%- end -%>
  <fieldset>
    <div class="row">
      <label>Username</label>
      <input id="user_login" name="user[login]" size="30" type="text" value="<%= @user.login %>" />
    </div>
    <div class="row">
      <label>Email</label>
      <input id="user_email" name="user[email]" size="30" type="text" value="<%= @user.email %>" /
    </div>

    <div class="row">
      <label>Password</label>
      <input id="user_password" name="user[password]" size="30" type="password" /
    </div>
    <div class="row">
      <label>Confirm</label>
      <input id="user_password_confirmation" name="user[password_confirmation]" size="30" type="password" /
    </div>
  </fieldset>
<a class="whiteButton" type="submit" href="#" target="_self">Save</a>
<%- end -%>